<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.productrecommendation.controllers.MyQueriesController">
   <children>
      <!-- Header Section -->
      <VBox spacing="10.0">
         <children>
            <Label text="My Queries">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="totalQueriesLabel" text="Total Queries: 0" textFill="#6b7280">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
      
      <!-- Search and Action Bar -->
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by title, description, or category..." style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="searchBtn" onAction="#performSearch" style="-fx-background-color: #4f46e5; -fx-text-fill: white; -fx-background-radius: 8; -fx-border-radius: 8;" text="Search">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="refreshBtn" onAction="#refreshQueries" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8; -fx-border-radius: 8;" text="Refresh">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      
      <!-- Scrollable Query Cards Container -->
      <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="myQueryContainer" spacing="15.0" style="-fx-background-color: transparent;">
               <padding>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
   </padding>
</VBox>