<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.productrecommendation.controllers.MyRecommendationsController">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" spacing="16.0" style="-fx-background-color: white; -fx-border-color: #E5E7EB; -fx-border-width: 0 0 1 0;">
         <children>
            <Label fx:id="titleLabel" style="-fx-text-fill: #1F2937; -fx-font-size: 24px; -fx-font-weight: bold;" text="My Recommendations" />
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_RIGHT" spacing="4.0">
               <children>
                  <Label fx:id="totalCommentsLabel" style="-fx-text-fill: #6B7280; -fx-font-size: 14px;" text="Total: 0 recommendations" />
                  <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #F3F4F6; -fx-text-fill: #374151; -fx-background-radius: 6; -fx-border-radius: 6; -fx-cursor: hand;" text="ðŸ”„ Refresh">
                     <padding>
                        <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="24.0" right="24.0" top="20.0" />
         </padding>
      </HBox>
      
      <!-- Content Section -->
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <!-- Comments List -->
            <ScrollPane fx:id="commentsScrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #F9FAFB;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="commentsContainer" spacing="0.0" style="-fx-background-color: #F9FAFB;">
                     <padding>
                        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            
            <!-- No Comments Message -->
            <VBox fx:id="noCommentsMessage" alignment="CENTER" managed="false" spacing="16.0" style="-fx-background-color: #F9FAFB;" visible="false" VBox.vgrow="ALWAYS">
               <children>
                  <Label style="-fx-text-fill: #9CA3AF; -fx-font-size: 48px;" text="ðŸ’¬" />
                  <Label style="-fx-text-fill: #6B7280; -fx-font-size: 18px; -fx-font-weight: bold;" text="No recommendations yet" />
                  <Label style="-fx-text-fill: #9CA3AF; -fx-font-size: 14px; -fx-text-alignment: center;" text="You haven't made any recommendations yet.&#10;Start helping others by commenting on their queries!" wrapText="true">
                     <VBox.margin>
                        <Insets left="40.0" right="40.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="40.0" left="24.0" right="24.0" top="40.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>